{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "dev": "pnpm run build-css && npm-run-all --parallel --print-label dev-*",
    "dev-remix": "remix run",
    "dev-css": "postcss styles --dir app/styles --verbose --watch",
    "build": "npm-run-all --parallel --print-label build-*",
    "build-remix": "remix build",
    "build-css": "postcss styles --dir app/styles --verbose --env production",
    "start": "remix-serve build",
    "deploy": "flyctl deploy --build-arg REMIX_TOKEN=${REMIX_TOKEN}"
  },
  "dependencies": {
    "@remix-run/node": "0.17.0",
    "@remix-run/react": "0.17.0",
    "@remix-run/serve": "0.17.0",
    "dotenv": "^9.0.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-router-dom": "6.0.0-beta.0",
    "remix": "0.17.0"
  },
  "devDependencies": {
    "@remix-run/dev": "0.17.0",
    "@tailwindcss/line-clamp": "0.2.0",
    "@types/react": "17.0.5",
    "@types/react-dom": "17.0.3",
    "autoprefixer": "10.2.5",
    "npm-run-all": "4.1.5",
    "postcss": "8.2.14",
    "postcss-cli": "8.3.1",
    "tailwindcss": "2.1.2",
    "typescript": "4.2.4"
  },
  "engines": {
    "node": "14"
  },
  "sideEffects": false
}
