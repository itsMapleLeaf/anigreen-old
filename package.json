{
	"private": true,
	"scripts": {
		"dev": "npm-run-all --parallel --print-label dev-*",
		"dev-vite": "vite",
		"dev-codegen": "pnpm run codegen -- --watch",
		"build": "pnpm run typecheck && pnpm run codegen && vite build",
		"start": "node build/server.js",
		"prepare": "typesync --ignorepackages=prettier,eslint && pnpm run codegen",
		"codegen": "graphql-codegen --config graphql.config.json",
		"analyze": "source-map-explorer './dist/**/*.js'",
		"typecheck": "tsc --noEmit",
		"lint": "eslint --ext \"js,ts,tsx,mjs\" .",
		"format": "prettier --write .",
		"deploy": "pnpm run build && flyctl deploy"
	},
	"dependencies": {
		"@headlessui/react": "^1.0.0",
		"@heroicons/react": "^1.0.1",
		"@popperjs/core": "^2.9.2",
		"@radix-ui/react-tooltip": "^0.0.16",
		"@tailwindcss/line-clamp": "^0.2.0",
		"constate": "^3.2.0",
		"date-fns": "^2.21.1",
		"focus-visible": "^5.2.0",
		"graphql-request": "^3.4.0",
		"history": "^5.0.0",
		"lodash-es": "^4.17.21",
		"react": "17.0.2",
		"react-dom": "17.0.2",
		"react-error-boundary": "^3.1.1",
		"react-query": "3.13.12",
		"react-router-dom": "^6.0.0-beta.0"
	},
	"devDependencies": {
		"@graphql-codegen/cli": "1.21.3",
		"@graphql-codegen/typescript": "1.21.1",
		"@graphql-codegen/typescript-generic-sdk": "1.17.9",
		"@graphql-codegen/typescript-operations": "1.17.15",
		"@types/cookie-session": "^2.0.42",
		"@types/express": "^4.17.11",
		"@types/lodash-es": "^4.17.4",
		"@types/react": "^17.0.3",
		"@types/react-dom": "^17.0.3",
		"@types/tailwindcss": "^2.0.2",
		"@typescript-eslint/eslint-plugin": "^4.22.0",
		"@typescript-eslint/parser": "^4.22.0",
		"@vitejs/plugin-react-refresh": "1.3.3",
		"autoprefixer": "^10.2.5",
		"axios": "^0.21.1",
		"cookie-session": "^1.4.0",
		"eslint": "^7.24.0",
		"eslint-config-prettier": "^8.2.0",
		"eslint-plugin-jsx-a11y": "^6.4.1",
		"eslint-plugin-react": "^7.23.2",
		"eslint-plugin-react-hooks": "^4.2.0",
		"express": "^4.17.1",
		"graphql": "^15.5.0",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.2.12",
		"prettier": "^2.2.1",
		"source-map-explorer": "^2.5.2",
		"tailwindcss": "^2.1.2",
		"typescript": "^4.2.4",
		"typesync": "0.8.0",
		"vite": "2.2.2",
		"vite-plugin-mix": "0.3.0"
	},
	"eslintConfig": {
		"env": {
			"browser": true,
			"es2021": true,
			"node": true
		},
		"extends": [
			"eslint:recommended",
			"plugin:react/recommended",
			"plugin:react-hooks/recommended",
			"plugin:jsx-a11y/recommended",
			"prettier"
		],
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"ecmaFeatures": {
				"jsx": true
			},
			"ecmaVersion": 2021,
			"sourceType": "module"
		},
		"plugins": [
			"react",
			"@typescript-eslint"
		],
		"rules": {
			"no-undef": "off",
			"no-unused-vars": "off",
			"react/react-in-jsx-scope": [
				"off"
			],
			"react/prop-types": [
				"off"
			]
		},
		"ignorePatterns": [
			"**/node_modules/**",
			"**/dist/**",
			"src/generated/**"
		],
		"settings": {
			"react": {
				"version": "latest"
			}
		}
	},
	"prettier": {
		"quoteProps": "consistent",
		"semi": false,
		"trailingComma": "all",
		"useTabs": true
	}
}
